{
  "name": "dumbledoor",
  "private": true,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.2.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "user-db:push": "pnpm -F user-db push",
    "user-db:studio": "pnpm -F user-db studio",
    "user-db:generate": "pnpm -F user-db generate",
    "access-db:push": "pnpm -F access-db push",
    "access-db:studio": "pnpm -F access-db studio",
    "access-db:generate": "pnpm -F access-db generate",
    "door-db:push": "pnpm -F door-db push",
    "door-db:studio": "pnpm -F door-db studio",
    "door-db:generate": "pnpm -F door-db generate",
    "log-db:push": "pnpm -F log-db push",
    "log-db:studio": "pnpm -F log-db studio",
    "log-db:generate": "pnpm -F log-db generate",
    "card-db:push": "pnpm -F card-db push",
    "card-db:studio": "pnpm -F card-db studio",
    "card-db:generate": "pnpm -F card-db generate",
    "dev": "turbo dev --concurrency 100 --parallel",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws && pnpm log-db:generate && pnpm user-db:generate && pnpm access-db:generate && pnpm door-db:generate && pnpm card-db:generate",
    "all-db:push": "pnpm log-db:push && pnpm user-db:push && pnpm access-db:push && pnpm door-db:push && pnpm card-db:push",
    "typecheck": "turbo typecheck",
    "ui-add": "pnpm -F ui ui-add"
  },
  "devDependencies": {
    "@dumbledoor/prettier-config": "workspace:*",
    "@turbo/gen": "^2.0.3",
    "prettier": "^3.3.1",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5"
  },
  "prettier": "@dumbledoor/prettier-config"
}
