generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/mqtt-client"
}

datasource db {
  provider = "postgresql"
  url      = env("MQTT_DATABASE_URL")
}

model MqttMessage {
  id        String   @id @default(uuid())
  topic     String
  created_at DateTime @default(now())
  status    String
}